


@model List<Product>


<div class="bg-white">
    <a href="/Products/CreateFormWithProduct">
        <button class="btn btn-primary mb-2">Craete Product</button>
  </a>
    <div class="container py-2">

            <div class="row gap-3 d-flex justify-content-center align-items-center">

                @foreach (var item in Model)
                { 

                    <div class="card" style="width: 18rem;">
                       <a href="/Products/Details?id=@item.Id">
                        <img src="~/Images/@item.Img" class="card-img-top" alt="...">
                       </a>
                        <div class="card-body">
                            <h5 class="card-title">@item.Name</h5>
                            <p class="card-text">@item.Description</p>
                            <p class="card-text">@item.Price</p>
                            <a href="#" class="btn btn-primary">Buy</a>
                        </div>
                    </div>




                }




            </div>
        </div>

    </div>











